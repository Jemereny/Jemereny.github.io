---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import SectionPillButtons from '../components/SectionPillButtons.astro'

import { Image } from 'astro:assets'
import astro from '../assets/about-astro.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Typescript', 'Javascript', '.NET/C#', 'Python']
const apis = ['REST API', 'GraphQL']
const databases = ['DynamoDB', 'PostgreSQL']
const skills = ['Object-Oriented Programming', 'Functional Programming', 'SOLID']
const technologies = ['Amazon Web Services/AWS', 'Docker', 'React']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
